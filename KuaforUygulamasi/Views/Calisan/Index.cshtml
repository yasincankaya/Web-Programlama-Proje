@model IEnumerable<KuaforUygulamasi.Models.Calisan>

@{
    ViewData["Title"] = "Çalışan Listesi";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Çalışan Ekle</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ID)</th>
                <th>@Html.DisplayNameFor(model => model.Ad)</th>
                <th>@Html.DisplayNameFor(model => model.Soyad)</th>
                <th>@Html.DisplayNameFor(model => model.UzmanlikAlanlari)</th>
                <th>Müsaitlik Saatleri</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Ad</td>
                    <td>@item.Soyad</td>
                    <td>@string.Join(", ", item.UzmanlikAlanlari)</td>
                    <td>@item.MusaitlikBaslangic.ToString(@"hh\:mm") - @item.MusaitlikBitis.ToString(@"hh\:mm")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-primary">Düzenle</a>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-info">Detaylar</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>