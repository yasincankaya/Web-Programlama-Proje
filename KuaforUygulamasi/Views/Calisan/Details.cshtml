@model KuaforUygulamasi.Models.Calisan

@{
    ViewData["Title"] = "Çalışan Detayları";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Ad)</dt>
                <dd class="col-sm-9">@Model.Ad</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Soyad)</dt>
                <dd class="col-sm-9">@Model.Soyad</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UzmanlikAlanlari)</dt>
                <dd class="col-sm-9">@string.Join(", ", Model.UzmanlikAlanlari)</dd>

                <dt class="col-sm-3">Çalışma Saatleri</dt>
                <dd class="col-sm-9">@Model.MusaitlikBaslangic.ToString(@"hh\:mm") - @Model.MusaitlikBitis.ToString(@"hh\:mm")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>