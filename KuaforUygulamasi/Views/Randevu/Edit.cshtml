@model KuaforUygulamasi.Models.Randevu

<h2>Randevu Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label asp-for="KullaniciId" class="control-label">Müşteri</label>
        <select asp-for="KullaniciId" class="form-control" asp-items="@(new SelectList(ViewBag.KullaniciListesi, "Id", "UserName", Model.KullaniciId))">
            <option value="">Müşteri Seçin</option>
        </select>
        <span asp-validation-for="KullaniciId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CalisanID" class="control-label">Çalışan</label>
        <select asp-for="CalisanID" class="form-control" asp-items="@(new SelectList(ViewBag.CalisanListesi, "ID", "Ad", Model.CalisanID))">
            <option value="">Çalışan Seçin</option>
        </select>
        <span asp-validation-for="CalisanID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IslemID" class="control-label">İşlem</label>
        <select asp-for="IslemID" class="form-control" asp-items="@(new SelectList(ViewBag.IslemListesi, "ID", "Ad", Model.IslemID))">
            <option value="">İşlem Seçin</option>
        </select>
        <span asp-validation-for="IslemID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Saat" class="control-label">Randevu Saati</label>
        <input asp-for="Saat" class="form-control" type="datetime-local" />
        <span asp-validation-for="Saat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Durum" class="control-label">Durum</label>
        <input asp-for="Durum" class="form-control" />
        <span asp-validation-for="Durum" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
