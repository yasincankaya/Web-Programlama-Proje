@{
    ViewData["Title"] = "Register";
}
<h2>Hesap Oluştur</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Lütfen e-mailinizi giriniz" required />
    </div>
    <div class="form-group">
        <label for="sifre">Password</label>
        <input type="password" id="sifre" name="sifre" class="form-control" placeholder="Lütfen şifrenizi giriniz." required />
    </div>
    <div class="form-group">
        <label for="ad">First Name</label>
        <input type="text" id="ad" name="ad" class="form-control" placeholder="Lütfen adınızı giriniz" required />
    </div>
    <div class="form-group">
        <label for="soyad">Last Name</label>
        <input type="text" id="soyad" name="soyad" class="form-control" placeholder="Lütfen soyadınızı giriniz." required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Kayıt Ol</button>
</form>
