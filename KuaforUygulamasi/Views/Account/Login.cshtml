@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>
<form method="post" asp-controller="Account" asp-action="Login">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Email Giriniz" required />
    </div>
    <div class="form-group">
        <label for="sifre">Password</label>
        <input type="password" id="sifre" name="sifre" class="form-control" placeholder="Şifre Giriniz" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Giriş Yap</button>
</form>
