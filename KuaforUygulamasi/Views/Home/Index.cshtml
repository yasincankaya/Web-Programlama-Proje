@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container my-5">
    <!-- Hero Bölümü -->
    <div class="text-center bg-light p-5 rounded shadow-sm" style="background-color: rgba(255, 255, 255, 0.7) !important;">
        <h1 class="display-4 fw-bold text-primary">Glamour Beauty</h1>
        <p class="text-muted" style="color: black !important;">En iyi hizmet için buradayız!</p>

        @if (User?.Identity?.IsAuthenticated == true)
        {
            <a href="/Randevu/Create" class="btn btn-primary btn-lg mt-3">Randevu Al</a>
        }
        else
        {
            <p class="text-muted mt-3" style="color: black !important;">Randevu almak için giriş yapmanız gerekiyor.</p>
            <a href="/Account/Login" class="btn btn-secondary btn-lg mt-3" style="color: rebeccapurple !important;">Giriş Yap</a>
        }
    </div>

    <!-- Hizmetler Bölümü -->
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="https://meloknows.b-cdn.net/fileupload%2Fb6384946-6bb0-4e51-9010-6e1a06d895de?generation=1730902359364921&alt=media" class="card-img-top" alt="Saç Kesimi">
                <div class="card-body text-center">
                    <h5 class="card-title">Saç Kesimi</h5>
                    <p class="card-text">Profesyonel saç kesimi hizmetlerimizle tarzınızı yenileyin.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="https://www.pariskuafor.com.tr/assets/images/2021/photo1111111.jpg" class="card-img-top" alt="Saç Boyama">
                <div class="card-body text-center">
                    <h5 class="card-title">Saç Boyama</h5>
                    <p class="card-text">Kişiye özel renk seçenekleri ile saçlarınızı güzelleştirin.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="https://www.drderm.com.tr/wp-content/uploads/2022/06/erkek-lazer-epilasyon-kac-seansta-biter-014.webp" class="card-img-top" alt="Bakım ve Spa">
                <div class="card-body text-center">
                    <h5 class="card-title">Epilasyon</h5>
                    <p class="card-text">İstenmeyen tüylerden kurtulmak için modern ve etkili epilasyon çözümlerimizden faydalanın.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Duyurular Bölümü -->
    <div class="mt-5 bg-primary text-white p-5 rounded shadow-sm">
        <h2 class="text-center fw-bold">Duyurular ve Kampanyalar</h2>
        <p class="text-center mt-3">
            Yeni müşterilerimize özel %20 indirim! Kampanya detayları için bizimle iletişime geçin.
        </p>
    </div>

    <!-- Çalışma Saatleri ve İletişim -->
    <div class="row mt-5 text-center">
        <div class="col-md-6">
            <h5 class="fw-bold text-primary">Çalışma Saatlerimiz</h5>
            <p>Pazartesi - Cumartesi: 09:00 - 20:00</p>
            <p>Pazar: Kapalı</p>
        </div>
        <div class="col-md-6">
            <h5 class="fw-bold text-primary">İletişim</h5>
            <p><i class="bi bi-telephone"></i> +90 555 123 45 67</p>
            <p><i class="bi bi-envelope"></i> info@kuaforunuz.com</p>
        </div>
    </div>
</div>
