@model IEnumerable<Kullanici>
@using Microsoft.AspNetCore.Identity

<h2>Admin Panel</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Ad</th>
            <th>Soyad</th>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <th>İşlemler</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Ad</td>
                <td>@user.Soyad</td>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <td>
                        <a href="#" class="btn btn-sm btn-primary">Düzenle</a>
                        <a href="#" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@if (!User.Identity.IsAuthenticated)
{
    <p class="text-warning">Admin işlemleri için giriş yapmalısınız.</p>
}
