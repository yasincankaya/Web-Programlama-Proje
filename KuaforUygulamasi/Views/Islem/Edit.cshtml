@model KuaforUygulamasi.Models.Islem

@{
    ViewData["Title"] = "İşlem Düzenle";
}

<h2>İşlem Düzenle</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Sure"></label>
        <input asp-for="Sure" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Ucret"></label>
        <input asp-for="Ucret" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="UzmanlikAlani">Uzmanlık Alanı</label>
        <select asp-for="UzmanlikAlani" class="form-control">
            @foreach (var item in Enum.GetValues(typeof(UzmanlikAlani)))
            {
                var selected = (item.ToString() == Model.UzmanlikAlani.ToString()) ? "selected" : "";
                <option value="@item" selected>@item</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
</form>
