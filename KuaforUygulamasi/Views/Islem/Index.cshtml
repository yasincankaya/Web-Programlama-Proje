@model IEnumerable<KuaforUygulamasi.Models.Islem>

@{
    ViewData["Title"] = "İşlem Listesi";
}

<h2>İşlem Listesi</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Yeni İşlem Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Süre (Dakika)</th>
            <th>Ücret (₺)</th>
            <th>Uzmanlık Alanı</th> 
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var islem in Model)
        {
            <tr>
                <td>@islem.ID</td>
                <td>@islem.Sure</td>
                <td>@islem.Ucret.ToString("F2") ₺</td>
                <td>@islem.UzmanlikAlani</td> <!-- Uzmanlık alanını burada gösteriyoruz -->
                <td>
                    <a asp-action="Edit" asp-route-id="@islem.ID" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@islem.ID" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
